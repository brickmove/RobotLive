<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
	<!--作用于其他Fragment退出时的动画-->
	<scale
		android:fromXScale="1.0"
		android:fromYScale="1.0"
		android:toXScale="0"
		android:toYScale="0"
		android:pivotX="50%"
		android:pivotY="50%"
		android:duration="200"
		android:fillAfter="true"
	/>
	<alpha
		android:fromAlpha="1.0"
		android:toAlpha="0.0"
		android:duration="200"
	/>
</set>