<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_robot_side"
        android:layout_width="96dp"
        android:layout_height="28dp"
        android:layout_marginStart="21dp"
        android:layout_marginEnd="258dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="674dp"
        android:textColor="@color/robot_side"
        android:gravity="center_vertical|start"
        android:textAlignment="viewStart"
        android:text="@string/robot_side"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_robot_side"
        app:layout_constraintStart_toStartOf="@+id/tv_robot_side"
        android:layout_marginTop="17dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="horizontal"
        tools:listitem="@layout/recycle_robot_menu"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_robot_list"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rv_home_menu"
        app:layout_constraintStart_toStartOf="@+id/rv_home_menu"
        android:layout_marginTop="22dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/recycle_robot_list"
        />
</androidx.constraintlayout.widget.ConstraintLayout>